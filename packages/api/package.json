{
  "name": "@lerna-boilerplate/api",
  "version": "1.0.0",
  "description": "An minium API example builded with TypeScript",
  "author": "Thomaz Zandonotto <thomaz.zandonotto@gmail.com",
  "license": "ISC",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**' --exec \"ts-node -r dotenv/config\" src/index.ts",
    "format": "prettier --write \"src/**\"",
    "lint": "eslint --fix \"src/**\"",
    "test": "npx jest"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "install": "^0.13.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm": "^7.9.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1"
  }
}
